<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sidebar Navigation</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: "Lato", sans-serif;
            margin: 0;
            overflow-x: hidden; /* Evita desbordamiento horizontal */
        }

        .sidebar {
            height: 100%;
            width: 250px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #066594;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 200px; /* Ajuste el espacio entre la parte superior y el contenido dentro del sidebar */
        }

        .sidebar a {
            padding: 10px 15px;
            text-decoration: none;
            font-size: 18px;
            color: white;
            display: block;
            transition: 0.3s;
        }

        .sidebar a:hover {
            color: #e91010;
        }

        .sidebar .closebtn {
            position: absolute;
            top: 30px; /* Ajusta la posición vertical del botón de cierre */
            right: 20px; /* Ajusta la posición horizontal del botón de cierre */
            font-size: 36px;
            margin-left: 50px;
            color: white;
            cursor: pointer;
        }

        .openbtn {
            font-size: 20px;
            cursor: pointer;
            background-color: #066594;
            color: white;
            padding: 10px 15px;
            border: none;
            position: fixed;
            top: 60px; /* Ajusta la posición vertical del botón Menú */
            left: 20px;
            z-index: 2;
        }

        .openbtn:hover {
            background-color: #444;
        }

        #main {
            transition: margin-left .5s;
            padding: 16px;
            margin-left: 0; /* Ajusta el margen izquierdo inicial para el contenido principal */
        }
    </style>
</head>

<body>

    <div id="mySidebar" class="sidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="/">Inicio</a>
        <a href="/ventas">Ventas</a>
        <a href="/inventario">Inventario</a>
        <a href="/caja_diaria">Caja</a>
        <a href="/reportesventas">Reportes</a>
        <a href="/configuracion">Crear usuarios</a>
        <a href="/login">Logout</a>
    </div>

    <div id="main">
        <button class="openbtn" onclick="toggleNav()">&#9776; Menú</button>
    </div>
    

    <script>
        let sidebarOpen = false; // Variable para controlar si el sidebar está abierto

        function toggleNav() {
            if (sidebarOpen) {
                closeNav();
            } else {
                openNav();
            }
        }

        function openNav() {
            document.getElementById("mySidebar").style.width = "250px";
            document.getElementById("main").style.marginLeft = "250px";
            sidebarOpen = true; // Sidebar abierto
        }

        function closeNav() {
            document.getElementById("mySidebar").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
            sidebarOpen = false; // Sidebar cerrado
        }

        // Cerrar sidebar si no se usa después de cierto tiempo (ejemplo: 5 segundos)
        setTimeout(function() {
            if (!sidebarOpen) {
                closeNav();
            }
        }, 2000); // Tiempo en milisegundos (5 segundos en este caso)
    </script>

</body>

</html>
